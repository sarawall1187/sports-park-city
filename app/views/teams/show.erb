<section>
  <h1>Your New Team:</h1>
    <h2><%= @team.name %></h2>
    <h2><%= @team.sport_type %></h2>
    <h2><%= @team.athlete.name %></h2>
    <% if @team.athlete == current_user %>
  <button type="button" name="button"><a href="/teams/<%= @team.id %>/edit">Edit your Team</a></button>
   <form action="/teams/<%= @team.id %>/delete" method="post"><br>
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Your Team"><br>
      </form>
      <% end %> 
  <button type="button" name="button"><a href="/athletes/<%= @team.athlete.id %>">Go Back to your Profile</a></button>
</section>
